<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/border_round"
                android:bottomRightRadius="@dimen/border_round"
                android:topLeftRadius="@dimen/border_round"
                android:topRightRadius="@dimen/border_round" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/colorTextLight" />

            <corners
                android:bottomLeftRadius="@dimen/border_round"
                android:bottomRightRadius="@dimen/border_round"
                android:topLeftRadius="@dimen/border_round"
                android:topRightRadius="@dimen/border_round" />
        </shape>
    </item>
</layer-list>